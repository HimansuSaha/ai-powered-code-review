# Environment variables for the AI Code Review System
# Copy this file to .env and update the values

# Database Configuration
DATABASE_PASSWORD=postgres123
DATABASE_URL=postgresql+asyncpg://postgres:postgres123@localhost:5432/ai_code_review

# Redis Configuration  
REDIS_PASSWORD=redis123
REDIS_URL=redis://:redis123@localhost:6379/0

# Security
SECRET_KEY=your-super-secret-key-change-in-production-minimum-32-characters-long
DEBUG=false

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# JWT Settings
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ML Model Settings
ML_MODEL_PATH=./models
ML_BATCH_SIZE=32
ML_MAX_FILE_SIZE=1048576

# Analysis Thresholds
VULNERABILITY_THRESHOLD=0.7
QUALITY_THRESHOLD=0.6
COMPLEXITY_THRESHOLD=10

# Celery Settings
CELERY_BROKER_URL=redis://:redis123@localhost:6379/1
CELERY_RESULT_BACKEND=redis://:redis123@localhost:6379/1

# GitHub Integration (Optional)
GITHUB_WEBHOOK_SECRET=your-github-webhook-secret
GITHUB_APP_ID=your-github-app-id
GITHUB_PRIVATE_KEY=your-github-private-key

# Monitoring
PROMETHEUS_METRICS_PORT=8001
GRAFANA_PASSWORD=admin123

# Frontend
REACT_APP_API_URL=http://localhost:8000/api/v1

# Production Settings
NODE_ENV=production
ENVIRONMENT=production