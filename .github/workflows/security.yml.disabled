name: Security Audit

on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]
  schedule:
    # Run daily security scan at 2 AM UTC
    - cron: '0 0 31 2 *'

jobs:
  security-scan:
    runs-on: ubuntu-latest
    
    permissions:
      security-events: write
      contents: read
    
    steps:
    - name: Checkout code
      uses: actions/checkout@v4
    
    - name: Run Trivy vulnerability scanner
      uses: aquasecurity/trivy-action@master
      with:
        scan-type: 'fs'
        scan-ref: '.'
        format: 'sarif'
        output: 'trivy-results.sarif'
        severity: 'CRITICAL,HIGH,MEDIUM'
    
    - name: Upload Trivy scan results to GitHub Security tab
      uses: github/codeql-action/upload-sarif@v3
      if: always()
      with:
        sarif_file: 'trivy-results.sarif'
    
    - name: Set up Python for security tools
      uses: actions/setup-python@v4
      with:
        python-version: '3.11'
    
    - name: Install security scanning tools
      run: |
        pip install bandit safety semgrep
    
    - name: Run Bandit security linter
      run: |
        cd backend
        bandit -r app -f json -o bandit-results.json
        bandit -r app
      continue-on-error: true
    
    - name: Run Safety dependency scanner
      run: |
        cd backend
        pip install -r requirements.txt
        safety check --json --output safety-results.json
        safety check
      continue-on-error: true
    
    - name: Run Semgrep static analysis
      run: |
        semgrep --config=auto --json --output=semgrep-results.json .
        semgrep --config=auto .
      continue-on-error: true
    
    - name: Set up Node.js for frontend security scan
      uses: actions/setup-node@v4
      with:
        node-version: '18'
    
    - name: Install frontend dependencies and audit
      run: |
        cd frontend
        npm ci
        npm audit --audit-level=moderate --json > npm-audit-results.json || true
        npm audit --audit-level=moderate
      continue-on-error: true
    
    - name: Upload security scan artifacts
      uses: actions/upload-artifact@v3
      if: always()
      with:
        name: security-scan-results
        path: |
          trivy-results.sarif
          backend/bandit-results.json
          backend/safety-results.json
          semgrep-results.json
          frontend/npm-audit-results.json
    
    - name: Comment PR with security findings
      if: github.event_name == 'pull_request'
      uses: actions/github-script@v7
      with:
        script: |
          const fs = require('fs');
          
          let comment = '## üîí Security Scan Results\n\n';
          
          // Check if there are any security issues
          try {
            const trivyResults = JSON.parse(fs.readFileSync('trivy-results.sarif', 'utf8'));
            const semgrepResults = JSON.parse(fs.readFileSync('semgrep-results.json', 'utf8'));
            
            if (trivyResults.runs[0].results.length > 0) {
              comment += '‚ö†Ô∏è **Trivy found security vulnerabilities**\n';
            }
            
            if (semgrepResults.results.length > 0) {
              comment += '‚ö†Ô∏è **Semgrep found security issues**\n';
            }
            
            if (trivyResults.runs[0].results.length === 0 && semgrepResults.results.length === 0) {
              comment += '‚úÖ **No critical security issues found**\n';
            }
            
            comment += '\nDetailed results are available in the security scan artifacts.';
            
          } catch (error) {
            comment += '‚ùå **Error reading security scan results**\n';
          }
          
          github.rest.issues.createComment({
            issue_number: context.issue.number,
            owner: context.repo.owner,
            repo: context.repo.repo,
            body: comment
          });

  docker-security:
    runs-on: ubuntu-latest
    
    steps:
    - name: Checkout code
      uses: actions/checkout@v4
    
    - name: Build Docker images
      run: |
        docker build -t ai-code-review-backend:latest backend/
        docker build -t ai-code-review-frontend:latest frontend/
    
    - name: Scan backend Docker image
      uses: aquasecurity/trivy-action@master
      with:
        image-ref: 'ai-code-review-backend:latest'
        format: 'sarif'
        output: 'backend-docker-scan.sarif'
    
    - name: Scan frontend Docker image
      uses: aquasecurity/trivy-action@master
      with:
        image-ref: 'ai-code-review-frontend:latest'
        format: 'sarif'
        output: 'frontend-docker-scan.sarif'
    
    - name: Upload Docker scan results
      uses: github/codeql-action/upload-sarif@v3
      if: always()
      with:
        sarif_file: 'backend-docker-scan.sarif'
    
    - name: Upload frontend Docker scan results
      uses: github/codeql-action/upload-sarif@v3
      if: always()
      with:
        sarif_file: 'frontend-docker-scan.sarif'

  dependency-review:
    runs-on: ubuntu-latest
    if: github.event_name == 'pull_request'
    
    steps:
    - name: Checkout code
      uses: actions/checkout@v4
    
    - name: Dependency Review
      uses: actions/dependency-review-action@v3
      with:
        fail-on-severity: moderate
